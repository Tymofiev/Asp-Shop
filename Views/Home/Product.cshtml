@model WebApplication4.Models.CategoriesProducts

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Каталог</h2>
                    <div class="panel-group category-products">
                        @foreach (var item in Model.Categories)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a asp-controller="Home" asp-action="Category" asp-route-id="@item.CategoryId">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </a>
                                    </h4>
                                </div>
                            </div>                            
                        }
                    </div>
                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="product-details">
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="view-product">
                                <img src="@Model.Products.ElementAt(0).GetImage()" alt="" />
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="product-information">
                                <h2>@Model.Products.ElementAt(0).Name</h2>
                                <p>Код товара: @Model.Products.ElementAt(0).Code</p>
                                <span>
                                    <span>US $@Model.Products.ElementAt(0).Price</span>
                                    <a asp-controller="Cart" asp-action="Buy" asp-route-id="@Model.Products.ElementAt(0).ProductId" class="btn btn-default add-to-cart">
                                    <i class="fa fa-WebApplication4ping-cart"></i>В корзину</a>
                                </span>
                                <p><b>Виробник:</b> @Model.Products.ElementAt(0).Brand </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <br />
                            <h5>Опис товару</h5>
                            @Model.Products.ElementAt(0).Description
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
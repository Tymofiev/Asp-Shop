@model AspShop.Models.CategoriesProducts

<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Каталог</h2>
                    <div class="panel-group category-products">
                        @foreach (var item in Model.Categories)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a asp-controller="Home" asp-action="Category" asp-route-id="@item.CategoryId">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </a>
                                    </h4>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <h2 class="title text-center">Товари</h2>
                    <div class="row">

                        @foreach (var item in Model.Products)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <img src="@item.GetImage()" alt="" />
                                            <h2>$@Html.DisplayFor(modelItem => item.Price)</h2>
                                            <p>
                                                <a asp-controller="Home" asp-action="Product" asp-route-id="@item.ProductId">
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </a>
                                            </p>
                                            <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.ProductId" class="btn btn-default add-to-cart">
                                                <i class="fa fa-AspShopping-cart"></i>В корзину
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

